@model DrinkMachine.Data.Models.Machine

@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<h3>Coin Information</h3>
<div class="row">

    @for (var i = 0; i < Model.Coins.Count(); i++)
    {
        <div class="col-md-3 form-group">
            @Html.DisplayFor(m => m.Coins[i].Name)
            @Html.TextBoxFor(m => m.Coins[i].Quantity, new {@class= "form-control", placeholder = "0" })

        </div>
    }
</div>

<h3>Product Information</h3>


         @for (var i = 0; i < Model.Beverage.Count(); i++) { 
             <div class="row">
                 <div class="col-md-6">
            @Html.DisplayFor(m => m.Beverage[i].Name)<br />
            @Html.DisplayFor(m => m.Beverage[i].Quantity) drinks available, Cost = @Html.DisplayFor(m => m.Beverage[i].Price)<br />
                 </div>
        </div>
    }
    


